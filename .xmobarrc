Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run StdinReader
		    , Run Weather "EDVE" ["-t","<station>: <tempC>C <skyCondition>","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 20
                    , Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 20
                    , Run Cpu ["-p","3","-L","3","-H","50","--normal","green","--high","red"] 20
                    , Run Memory ["-t","Mem: <usedratio>%"] 20
                    , Run Swap [] 20
                    , Run Date "%a %b %_d %Y %H:%M" "date" 20
										, Run BatteryP ["BAT0"] ["-t","<left>% / <timeleft>"] 600
										, Run Kbd [] 
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% %cpu% | %memory% * %swap% | %eth0% - %wlan0% }{ %EDVE% %kbd% | %battery% | <fc=#ee9a00>%date%</fc>"
       }
